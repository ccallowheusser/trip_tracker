<h1>Trip Tracker</h1>

<% if @trips.any? %>
  <table>
    <thead>
      <tr>
        <th>Trip Name</th>
        <th>Departure Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= link_to trip.name, trip_path(trip) %></td>
          <td><%= trip.departDate %></td>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No trips found. Please create one!</h3>
<% end %>

<br>
<%= link_to 'All Locations', locations_path, class: 'btn' %>
<%= link_to 'New Trip', new_trip_path, class: 'btn blue' %>