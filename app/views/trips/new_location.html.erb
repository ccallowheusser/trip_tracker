<h1>Add A Location To Trip: <%= @trip.name %> </h1>

<% binding.pry %>
<% if @trip.locations.any? %>
	<ul>
		<% @trip.locations.each do |loc| %>
		  <li>
		    <%= link_to loc.info, add_trip_location_path(@trip, loc), method: :post %>
		  </li>
		  <hr />
		<% end %>
	</ul>
 
<% end %>

<%= link_to 'Back', trips_path, class: 'btn grey' %>
<%= link_to 'Add Trip Location', add_trip_location_path(@trip, params['id']), class: 'btn blue' %>